{% extends 'base.html.twig'%}

{% block title%} Accueil{% endblock%}



{%block body%}


    <main role="main" class="container">
            <div class="album py- bg-light">
                <div class="container-fluid">
        {% for article in articles %}
        <div class="col-md-4">
            <img src="{{article.image}}" alt="{{article.image}}">
            <div class="card-body">
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a href="" class="btn btn-sm btn-outline-secondary">Voir</a>
                        <a href="{{path('article_edit',{"id":article.id}) }}"  class="btn btn-sm btn-outline-secondary">Editer</a>
                        <a href="{{path('article_delete',{"id":article.id})}}" class="btn btn-sm btn-outline-secondary" onclick="return confirm('Attention ce ci va supprimer l\'article selectionnÃ©)" class="btn btn-sm btn-outline-secondary">Supprimer</a>
                    </div>
                    <small class="text-muted">{{ article.createdAt|date("d/m/Y") }}</small>
                </div>
            </div>
            </div>
        </div>

        {% endfor %}
                </div>
    </div>

    </main>
{%endblock%}

